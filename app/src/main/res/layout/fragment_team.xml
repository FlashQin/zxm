<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E9E9E9"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar_team"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_height="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_team1"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="Invite\n friends"
            android:textColor="#ff3d3d3d"
            android:textSize="11sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_team2"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="ZXM  web \norder"
            android:textColor="#ff3d3d3d"
            android:textSize="11sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_team3"
            android:text="Task\n bonus"
            android:textColor="#ff3d3d3d"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:lineSpacingExtra="0.1dp"
            android:background="@drawable/shape_team4"
            android:text="Financial\nproducts"
            android:textColor="#ff3d3d3d"
            android:textSize="11sp"
            />
    </LinearLayout>
    
    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btnshow"
        android:layout_width="160dp"
        android:textSize="13sp"
        android:text="Share Now"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/shape_bulebac_small"
        android:textColor="@color/white"
        android:layout_height="28dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Invite friends"
        android:textColor="#ff000000"
        android:textSize="13sp"
        android:textStyle="bold" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgshe"
            android:layout_width="155dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shejitu"
            android:layout_height="275dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A gives you"
                android:textColor="#ff313131"
                android:textStyle="bold"
                android:textSize="11sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 12% "
                android:textStyle="bold"
                android:textColor="#D63A3A"
                android:textSize="11sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="commission rebate"
                android:textColor="#ff313131"
                android:textStyle="bold"
                android:textSize="11sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/edta1"
            android:layout_width="53dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/lin1"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:background="@drawable/shape_whitebac_rec"
            android:text="0"
            android:textColor="#ff464646"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/edta1"
            app:layout_constraintLeft_toLeftOf="@id/edta1"
            app:layout_constraintRight_toRightOf="@id/edta1"
            android:layout_marginBottom="4dp"
            android:text="Persons"
            android:textColor="#ffa9a9a9"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/edta2"
            android:layout_width="53dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/lin1"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@id/edta1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:background="@drawable/shape_whitebac_rec"
            android:text="9999.00"
            android:textColor="#ff464646"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            app:layout_constraintBottom_toTopOf="@id/edta2"
            app:layout_constraintLeft_toLeftOf="@id/edta2"
            app:layout_constraintRight_toRightOf="@id/edta2"
            android:layout_marginBottom="4dp"
            android:textColor="#ffa9a9a9"
            android:textSize="11sp"
            />
        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btna"
            android:layout_width="43dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/lin1"
            app:layout_constraintLeft_toRightOf="@id/edta2"
            android:layout_marginLeft="12dp"
            android:text="Details"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="11sp"
            android:background="@drawable/shape_bulebac_small"
            android:layout_height="20dp"/>
        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edta1"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A gives you"
                android:textColor="#ff313131"
                android:textStyle="bold"
                android:textSize="11sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 8% "
                android:textStyle="bold"
                android:textColor="#D63A3A"
                android:textSize="11sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="commission rebate"
                android:textStyle="bold"
                android:textColor="#ff313131"
                android:textSize="11sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/edtb1"
            android:layout_width="53dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/lin2"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:background="@drawable/shape_whitebac_rec"
            android:text="9999.00"
            android:textColor="#ff464646"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/edtb1"
            app:layout_constraintLeft_toLeftOf="@id/edtb1"
            app:layout_constraintRight_toRightOf="@id/edtb1"
            android:layout_marginBottom="4dp"
            android:text="Persons"
            android:textColor="#ffa9a9a9"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/edtb2"
            android:layout_width="53dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/lin2"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@id/edtb1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:background="@drawable/shape_whitebac_rec"
            android:text="9999.00"
            android:textColor="#ff464646"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            app:layout_constraintBottom_toTopOf="@id/edtb2"
            app:layout_constraintLeft_toLeftOf="@id/edtb2"
            app:layout_constraintRight_toRightOf="@id/edtb2"
            android:layout_marginBottom="4dp"
            android:textColor="#ffa9a9a9"
            android:textSize="11sp"
            />
