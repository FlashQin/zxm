            android:id="@+id/btnb"
            android:layout_width="43dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/lin2"
            app:layout_constraintLeft_toRightOf="@id/edtb2"
            android:layout_marginLeft="12dp"
            android:text="Details"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="11sp"
            android:background="@drawable/shape_bulebac_small"
            android:layout_height="20dp"/>
        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edtb1"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A gives you"
                android:textColor="#ff313131"
                android:textStyle="bold"
                android:textSize="11sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 5% "
                android:textStyle="bold"
                android:textColor="#D63A3A"
                android:textSize="11sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="commission rebate"
                android:textStyle="bold"
                android:textColor="#ff313131"
