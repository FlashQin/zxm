<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_whitebac_rec"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:text="Confirm to exit?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:textSize="21sp"
        android:layout_height="wrap_content"/>
    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btnno"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnyes"
        android:layout_marginTop="90dp"
        android:text="Cancel"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="12dp"
        android:textSize="18sp"
        android:background="@drawable/shape_greysmall"
        android:textColor="@color/white"
        android:layout_height="40dp"/>
    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btnyes"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintLeft_toRightOf="@+id/btnno"
        android:layout_marginTop="90dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_orgbac_small"
        android:layout_marginRight="12dp"
        android:text="Yes"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_height="40dp"/>
    <View
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/btnno"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>