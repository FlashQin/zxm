<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/shape_whitebac_rec"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txtlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  LV1"
        android:paddingBottom="3dp"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:paddingTop="3dp"
        android:background="@drawable/shape_bulebac_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ffffff"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/txtbonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtlevel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="11dp"
        android:text="Bonus"
        android:textColor="#ff4ca14c"
        android:textSize="15sp"
        />
    <ImageView
        android:id="@+id/img1"
        android:layout_width="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtbonus"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="17dp"
        android:background="@mipmap/lubing"
        android:layout_marginTop="1dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img1"
        app:layout_constraintTop_toTopOf="@id/img1"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/img1"
        android:text="+0"
        android:textColor="#ff4ca14c"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="17dp"
        android:background="@mipmap/renshu_2"
        android:layout_marginTop="1dp"
        android:layout_height="22dp"/>
    <TextView
        android:id="@+id/txtnums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        app:layout_constraintTop_toTopOf="@+id/img2"
        app:layout_constraintLeft_toRightOf="@+id/img2"
        app:layout_constraintBottom_toBottomOf="@+id/img2"
        android:layout_marginLeft="10dp"
        android:textColor="#ff292929"
        android:textSize="22sp"
        />
    <TextView
        android:id="@+id/txtdetles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="5dp"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:paddingTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_bulebac_small"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>